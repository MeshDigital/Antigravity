<Page x:Class="SLSKDONET.Views.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewmodels="clr-namespace:SLSKDONET.ViewModels"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=viewmodels:LibraryViewModel}"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="LibraryPage">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="200"/>
        </Grid.RowDefinitions>

        <!-- ACTIVE TRACKS (Conveyor Belt) -->
        <GroupBox Grid.Row="0" Header="âš¡ Active Downloads" Foreground="White" BorderBrush="#404040" Margin="10">
            <DataGrid ItemsSource="{Binding ActiveTracksView}"
                      AutoGenerateColumns="False"
                      Background="Transparent"
                      RowBackground="#252526"
                      Foreground="White"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#404040"
                      HeadersVisibility="Column"
                      IsReadOnly="True">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2D2D2D"/>
                        <Setter Property="Foreground" Value="#A0A0A0"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="#404040"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" 
                                            Background="{TemplateBinding Background}" 
                                            BorderBrush="Transparent" 
                                            BorderThickness="0">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <!-- Status & Spinner -->
                    <DataGridTemplateColumn Header="State" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding State}" VerticalAlignment="Center"/>
                                    <!-- Simple Spinner Simulation for Searching/Downloading -->
                                    <TextBlock Text=" ðŸ”„" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding State}" Value="Searching">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding State}" Value="Downloading">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="*"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                    
                    <!-- Progress Bar -->
                    <DataGridTemplateColumn Header="Progress" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ProgressBar Value="{Binding Progress, Mode=OneWay}" Maximum="100" Height="4" VerticalAlignment="Center" Background="#333" Foreground="#007ACC"/>
                                    <TextBlock Text="{Binding Progress, StringFormat={}{0:F1}%}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="White"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTextColumn Header="Speed" Binding="{Binding CurrentSpeed}" Width="100"/>
                    
                     <!-- Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="80">
                         <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Cancel" Command="{Binding DataContext.HardRetryCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" 
                                        Background="#C42B1C" Foreground="White" BorderThickness="0" Padding="5,2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- SPLITTER -->
        <GridSplitter Grid.Row="1" Height="2" HorizontalAlignment="Stretch" Background="#404040" ShowsPreview="True"/>

        <!-- WAREHOUSE TRACKS -->
        <GroupBox Grid.Row="2" Foreground="White" BorderBrush="#404040" Margin="10,0,10,10">
            <GroupBox.Header>
                 <StackPanel Orientation="Horizontal">
                     <TextBlock Text="ðŸ“š Warehouse (History &amp; Pending)" FontWeight="Bold" Margin="0,0,10,0"/>
                     <CheckBox Content="ðŸ–¼ï¸ Gallery Mode" IsChecked="{Binding IsGridView}" Foreground="White" VerticalAlignment="Center"/>
                 </StackPanel>
            </GroupBox.Header>
            <Grid>
            <DataGrid ItemsSource="{Binding WarehouseTracksView}"
                      Name="WarehouseDataGrid"
                      AutoGenerateColumns="False"
                      Background="Transparent"
                      RowBackground="#252526"
                      Foreground="#CCCCCC"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#404040"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      Visibility="{Binding IsGridView, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                 <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2D2D2D"/>
                        <Setter Property="Foreground" Value="#A0A0A0"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="#404040"/>
                    </Style>
                     <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" 
                                            Background="{TemplateBinding Background}" 
                                            BorderBrush="Transparent" 
                                            BorderThickness="0">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridRow_PreviewMouseLeftButtonDown"/>
                        <EventSetter Event="Drop" Handler="DataGridRow_Drop"/>
                        <Setter Property="AllowDrop" Value="True"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="State" Binding="{Binding State}" Width="120"/>
                    <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="*"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding ErrorMessage}" Width="200" Foreground="#FF6B6B"/>
                    
                     <DataGridTemplateColumn Header="Actions" Width="80">
                         <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Retry" Command="{Binding DataContext.HardRetryCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" 
                                        Background="#2E8B57" Foreground="White" BorderThickness="0" Padding="5,2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>


            <!-- GALLERY GRID VIEW -->
            <ListBox ItemsSource="{Binding WarehouseTracksView}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     Visibility="{Binding IsGridView, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="160" ItemHeight="220" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="150" Height="210" Background="#2D2D2D" CornerRadius="4" Margin="5" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="150"/> <!-- Image -->
                                    <RowDefinition Height="*"/>   <!-- Text -->
                                </Grid.RowDefinitions>
                                
                                <!-- Cover Art -->
                                <Image Source="{Binding CoverArtUrl, TargetNullValue=/Assets/placeholder_album.png, FallbackValue=/Assets/fallback.png}" 
                                       Stretch="UniformToFill" Grid.Row="0">
                                    <Image.Clip>
                                        <RectangleGeometry Rect="0,0,150,150" RadiusX="4" RadiusY="4"/>
                                    </Image.Clip>
                                </Image>
                                
                                <!-- Status Overlay on Image -->
                                <Border Background="#AA000000" VerticalAlignment="Top" HorizontalAlignment="Right" CornerRadius="0,4,0,4" Padding="4,2" Grid.Row="0" Margin="0">
                                    <TextBlock Text="{Binding State}" Foreground="White" FontSize="10"/>
                                </Border>

                                <!-- Text Info -->
                                <StackPanel Grid.Row="1" Margin="8">
                                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="Bold" TextTrimming="CharacterEllipsis" FontSize="12" ToolTip="{Binding Title}"/>
                                    <TextBlock Text="{Binding Artist}" Foreground="#AAAAAA" TextTrimming="CharacterEllipsis" FontSize="11" ToolTip="{Binding Artist}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            </Grid>
        </GroupBox>
    </Grid>
</Page>